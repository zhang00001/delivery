/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.banner-wrapper>.banner {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(163, 38, 53, 1);
  font-size: 32rpx;
  color: white;
}

.content {
  margin-top: 50rpx;
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

.showModal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.3);
}

.showModal .showModal-body {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 400rpx;
  background: #fff;
  border-radius: 20rpx;
}

.showModal .showModal-title {
  height: 34rpx;
  line-height: 34rpx;
  font-size: 34rpx;
  text-align: center;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
  margin: 40rpx 0;
}

.showModal .showModal-time, .showModal .showModal-address,
.showModal .showModal-site {
  width: 100%;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #666;
  margin: 0 80rpx 30rpx;
}

.showModal .showModal-footer {
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 104rpx;
  border-top: 2rpx solid #eaeaea;
  font-size: 34rpx;
}

.showModal .showModal-footer view {
  flex: 1;
  display: flex;
  justify-content: center;
}

.showModal .showModal-footer view:first-child {
  font-family: PingFang SC;
  color: #999;
  border-right: 2rpx solid #eaeaea;
}

.showModal .showModal-footer view:last-child {
  font-family: PingFang SC;
  color: #a32635;
}
